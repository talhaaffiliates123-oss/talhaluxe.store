{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "shortDescription": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "discountedPrice": { "type": "number" },
        "category": { "type": "string" },
        "imageUrls": { "type": "array", "items": { "type": "string" } },
        "stock": { "type": "number" },
        "rating": { "type": "number" },
        "isNewArrival": { "type": "boolean" },
        "isBestSeller": { "type": "boolean" },
        "onSale": { "type": "boolean" },
        "reviewCount": { "type": "number", "description": "The total number of reviews." }
      },
      "required": [
        "name",
        "shortDescription",
        "description",
        "price",
        "category",
        "imageUrls",
        "stock",
        "rating",
        "isNewArrival",
        "isBestSeller"
      ]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who placed the order." },
        "shippingInfo": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" },
            "country": { "type": "string" }
          },
          "required": ["name", "email", "address", "city", "state", "zip", "country"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["productId", "name", "quantity", "price"]
          }
        },
        "totalPrice": { "type": "number" },
        "paymentMethod": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Processing", "Shipped", "Delivered", "Cancelled"]
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "shippingInfo", "items", "totalPrice", "status", "createdAt"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in Firestore.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The user's display name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["name", "email", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "description": "Represents a user notification.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "link": { "type": "string" }
      },
      "required": ["userId", "message", "read", "createdAt"]
    },
    "CancellationReason": {
      "title": "Cancellation Reason",
      "description": "Stores the reason a customer cancelled an order.",
      "type": "object",
      "properties": {
        "orderId": { "type": "string" },
        "userId": { "type": "string" },
        "reasons": { "type": "array", "items": { "type": "string" } },
        "customReason": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["orderId", "userId", "reasons", "createdAt"]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a product review.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "rating": { "type": "number", "description": "A number from 1 to 5." },
        "comment": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "userName", "rating", "createdAt"]
    }
  },
  "auth": { "providers": ["password", "emailLink"] },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores all products available in the store."
    },
    "/products/{productId}/reviews/{reviewId}": {
        "schema": { "$ref": "#/entities/Review" },
        "description": "Stores all reviews for a specific product."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores individual order details."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public user profile information."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": { "$ref": "#/entities/Notification" },
      "description": "Stores notifications for a specific user."
    },
    "/cancellationReasons/{cancellationId}": {
        "schema": { "$ref": "#/entities/CancellationReason" },
        "description": "Stores reasons provided by customers for cancelling an order."
    }
  }
}
