
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // The admin's email is stored in an environment variable in the app.
      // We check against that value here.
      // Make sure the `ADMIN_EMAIL` is set in your deployment environment.
      return request.auth != null && request.auth.token.email == "talhaaffiliates123@gmail.com";
    }

    match /products/{productId} {
      allow read: if true;
      allow list: if true; // Allow public listing of products
      allow write: if isAdmin();

       match /reviews/{reviewId} {
         allow read: if true;
         // Allow create if user is authenticated and the userId matches their own UID
         allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       }
    }

    match /deals/{dealId} {
        allow read, list: if true;
        allow write: if isAdmin();
    }
    
    match /blog/{postId} {
      allow read: if true;
      allow list: if true;
      allow write: if isAdmin();
    }
    
    match /settings/site {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /settings/payment {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      // Allow user to cancel their own 'Processing' order.
      // Allow admin to update any order.
      allow update: if (isOwner(resource.data.userId) && request.resource.data.status == 'Cancelled' && resource.data.status == 'Processing') || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /users/{userId} {
      // Allow admin to read any user profile (for finding UID from email).
      allow read: if isAdmin();
      // Allow a user to create their own profile document.
      allow create: if isOwner(userId);
      // Allow user to update their own profile (e.g., name, fcmSettings)
      allow update: if isOwner(userId);
    }

    match /cancellationReasons/{cancellationId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
    }
  }
}
